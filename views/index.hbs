<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div id="success" class="alert alert-success" {{#if noMessages}} hidden {{/if}}>
            {{successMsg}}
        </div>
    </div>
</div>
<div class="well" id="searchDiv">
<span style="color:purple;">
<h3 align="center">enjoy online shopping experience</h3></span></div>

<!--loop through all products-->
<div class="single-product-area">
<div class="container">
{{# each products }}

<div class="row" >
    {{#each this}}
  <div class="col-sm-6 col-md-4" >
    <a href="/product/{{this.title}}">
    <div  class="thumbnail" id="single-shop-product">
      <img src="{{this.url}}" id="images" alt="No picture available"width="250px" height="270px">
        
        <a href="/checkout">Quick View</a>
      <div class="caption">
         
              <div class="title">
                   <span style="text-transform: none;">
        <h5>{{this.title}}</h5></span></div>
       <!-- <p class="description">..........</p>-->
          <div class="clearfix" id="cartBtn">
               <table style="width:100%">
                                                <tr>
                                                    <td><a href="/add-to-cart/{{this.title}}" class="pull-left" >
                                                        <button class="btn btn-success btn-lg" role="button" ><i class="fa fa-shopping-cart pull-left" aria-hidden="true"></i><span>CART</span></button></a></td>
                                                    <td><div style="color:black"><b>Rs.{{this.price}}</b></div></td>
                                                    <td><a href="/wish-list/{{this.title}}" class="pull-right" >
                                                        <button type="submit" class="btn btn-inverse btn-lg pull-right" name="addToWish" id="addToWish" value="" onclick="" ><i class="glyphicon glyphicon-heart"></i>
                                                            <span style="padding-left:10px">WISHLIST</span></button></a></td>
                                                </tr>
                                                </table>
      </div>
          </div>
    </div>
      </a>
  </div>
    
    {{/each}}
</div>
    
{{/each}}
    </div></div>
