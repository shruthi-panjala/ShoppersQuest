<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-2 col-sm-2">
            <div class="left-sidebar">  
                <div class="brands_products"><!--brands_products-->
                    <h2>Category</h2>
                    <div class="panel panel-default">
                        
                              <div class="panel-heading">
                                  <span style="color:#66ABAB">
                                  <h3>{{category}}
                                </h3>
                                      </span>
                                  </div>
                                <div class="panel-body">
                                    <ul>
                                {{#each sub_category}}
                                    <li><a href="{{this.dept}}/{{this.sub}}"> <span class="pull-right"></span><h4>{{this.sub}}</h4></a></li>
                                {{/each}}
                                        </ul>
                                </div>
                                 
                        </div>
                    </div></div>                                             
            </div>
          
        <div class="col-md-10 col-sm-10 ">
            <div class="single-product-area">
                <div class="zigzag-bottom"></div>
                    <div class="container">
                        {{# each products }}
                            <div class="row">
                                {{# each this}}
                                    <div class="col-md-4 col-sm-6">
                                        <a href="/product/{{this.title}}">
                                        <div class="thumbnail" style="border-color:transparent" id="single-shop-product">
                                            <div class="product-upper">
                                                <img src="{{this.url}}" alt="no picture available" width="250px" height="270px">
                                            </div>
                                            <h5 class="title"><b><i>{{this.title}}</i></b></h5>
                                            <!--<div class="pull-left" id="price-padding" style="pading-left:150px">
                                                <div><b>Rs.{{this.price}}</b></div>
                                            </div>-->  
                                            <div class="clearfix" id="cartBtn" >
                                                <table style="width:100%">
                                                <tr>
                                                    <td><a href="/add-to-cart/{{this.title}}" class="pull-left" >
                                                        <button class="btn btn-success btn-lg" role="button" ><i class="fa fa-shopping-cart pull-left" aria-hidden="true"></i><span>CART</span></button></a></td>
                                                    <td><div style="color:black"><b>Rs.{{this.price}}</b></div></td>
                                                    <td><a href="/wish-list/{{this.title}}" class="pull-right" >
                                                        <button type="submit" class="btn btn-inverse btn-lg pull-right" name="addToWish" id="addToWish" value="" onclick="" ><i class="glyphicon glyphicon-heart"></i>
                                                            <span style="padding-left:10px">WISHLIST</span></button></a></td>
                                                </tr>
                                                </table>
                                            </div>
                                        </div>
                                        </a>
                                    </div>
                                {{/each}}
                            </div>
                        {{/each}}
                    </div>
            </div>
        </div>
    </div>
</div>